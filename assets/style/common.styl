@require '~@/assets/style/variables'

html
    font-size 62.5%
    font-family 'Noto Sans JP', sans-serif

body
    font-size: 1.4rem
    color $black_000

ul
    list-style none

a
    color $black_000
    text-decoration none
    -webkit-tap-highlight-color $transparent
    tap-highlight-color $transparent

    &:hover
        opacity: 0.75

*,
*:before,
*:after
    box-sizing border-box
    padding 0
    margin 0
